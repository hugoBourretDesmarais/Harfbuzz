{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++ -std=c++20 main.cpp FontHandler.cpp Renderer.cpp -I harfbuzz/src -I /opt/homebrew/Cellar/freetype/2.13.0_1/include/freetype2 -L harfbuzz/build/src -L /opt/homebrew/Cellar/freetype/2.13.0_1/lib -lharfbuzz -lfreetype -o main",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./main",
            "dependsOn": ["build"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "env": {
                    "DYLD_LIBRARY_PATH": "${workspaceFolder}/harfbuzz/build/src"
                }
            },
            "problemMatcher": []
        }
    ]
}
